<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/reactiveActionBarStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/bar_back</item>
        <item name="android:windowBackground">
            @color/globalWindowBackground
        </item>
        <item name="android:windowContentOverlay">@null</item>


    </style>
    <style name="AppTheme.FilePicker" parent="AppTheme">
        <item name="android:actionBarStyle">
            @style/reactiveActionBarStyleFilePicker
        </item>
    </style>
    <style name="AppTheme.PicturePicker" parent="AppTheme">
        <item name="android:logo">@null</item>
        <item name="android:actionBarStyle">
            @style/reactiveActionBarStylePicturePicker
        </item>
    </style>
    <style name="AppTheme.ActivityAnimation"
        parent="@style/AppTheme">
        <!-- todo WHY THE FUCK ANIMATION DOES NOT WORK  -->
        <item name="android:activityOpenEnterAnimation">
            @animator/activity_explorer_enter
        </item>
        <item name="android:activityOpenExitAnimation">
            @animator/activity_explorer_enter
        </item>
        <item name="android:activityCloseEnterAnimation">
            @animator/activity_explorer_enter
        </item>
        <item name="android:activityCloseExitAnimation">
            @animator/activity_explorer_enter
        </item>
        <item name="android:windowAnimationStyle">
            @animator/activity_explorer_enter
        </item>
        <item name="android:windowEnterAnimation">
            @animator/activity_explorer_enter
        </item>
    </style>

    <style name="reactiveActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <!--item name="android:titleTextStyle">@android:style/TextAppearance.Holo.Widget.ActionBar.Title.Inverse</item>
        <item name="android:subtitleTextStyle">@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle.Inverse</item-->
        <item name="android:background">@color/main_color</item>
        <!--item name="android:backgroundStacked">@android:drawable/ab_stacked_solid_dark_holo</item>
        <item name="android:backgroundSplit">@android:drawable/ab_bottom_solid_inverse_holo</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:progressBarStyle">@android:style/Widget.Holo.ProgressBar.Horizontal</item>
        <item name="android:indeterminateProgressStyle">@android:style/Widget.Holo.ProgressBar</item>
        <item name="android:progressBarPadding">32dip</item>
        <item name="android:itemPadding">8dip</item-->
    </style>
    <style name="reactiveActionBarStylePicturePicker" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <!--item name="android:titleTextStyle">@android:style/TextAppearance.Holo.Widget.ActionBar.Title.Inverse</item>
        <item name="android:subtitleTextStyle">@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle.Inverse</item-->
        <item name="android:background">@color/main_color_picturepicker</item>
        <item name="android:displayOptions">showHome|showTitle</item>
        <!--item name="android:backgroundStacked">@android:drawable/ab_stacked_solid_dark_holo</item>
        <item name="android:backgroundSplit">@android:drawable/ab_bottom_solid_inverse_holo</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:progressBarStyle">@android:style/Widget.Holo.ProgressBar.Horizontal</item>
        <item name="android:indeterminateProgressStyle">@android:style/Widget.Holo.ProgressBar</item>
        <item name="android:progressBarPadding">32dip</item>
        <item name="android:itemPadding">8dip</item-->
    </style>
    <style name="reactiveActionBarStyleFilePicker" parent="@style/reactiveActionBarStyle">
        <item name="android:titleTextStyle">@style/reactiveActionBarTitleStyle</item>
        <!--item name="android:subtitleTextStyle">@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle.Inverse</item-->
        <!--item name="android:backgroundStacked">@android:drawable/ab_stacked_solid_dark_holo</item>
        <item name="android:backgroundSplit">@android:drawable/ab_bottom_solid_inverse_holo</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:progressBarStyle">@android:style/Widget.Holo.ProgressBar.Horizontal</item>
        <item name="android:indeterminateProgressStyle">@android:style/Widget.Holo.ProgressBar</item>
        <item name="android:progressBarPadding">32dip</item>
        <item name="android:itemPadding">8dip</item-->
    </style>

    <style name="reactiveActionBarTitleStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title.Inverse">
        <item name="android:paddingLeft">13dp</item>
        <item name="android:layout_marginLeft">13dp</item>
    </style>
</resources>
