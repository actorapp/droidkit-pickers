<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingLeft="@dimen/example_activity_horizontal_margin"
    android:paddingRight="@dimen/example_activity_horizontal_margin"
    android:paddingTop="@dimen/example_activity_vertical_margin"
    android:paddingBottom="@dimen/example_activity_vertical_margin"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/status"
        android:text="No file selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/select_files"
        android:text="Pick files lol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/select_images"
        android:text="Pick images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/pick_location"
        android:text="Pick location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="клацми"
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/testBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
